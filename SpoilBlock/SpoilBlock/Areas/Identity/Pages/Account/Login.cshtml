@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="text-center" style= "border-style:groove; border-radius: 5px; margin: auto; width:40%">
    <section>
        <form id="account" method="post">
            <h2>Please enter your username and password</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" style="margin:5px 5px 5px 5px">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin:5px 5px 5px 5px">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox" style=" margin-bottom: 5px;">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div style="width:80%; margin: auto; ">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary"   style=" margin-bottom: 10px;">Log in</button>
            
                
                <a  id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="margin-left:20px;margin-right:20px;">Register</a>
                
                @*<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend confirmation</a>*@
                
            </div>
        </form>
    </section>
</div>
    


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
